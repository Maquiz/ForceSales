<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManageTaskActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="40dp"
            android:text="ForceSales - Issue Tracker"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/show_all_task_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show All Issues" />

        <Button
            android:id="@+id/add_task_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Issue" />

        <Button
            android:id="@+id/remove_task_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove Issue" />

        <Button
            android:id="@+id/find_task_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Find Issue" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>