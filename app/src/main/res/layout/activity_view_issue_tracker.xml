<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="395dp"
        android:layout_height="656dp"
        android:layout_marginTop="8dp"
        android:layout_weight="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_conversion_absoluteHeight="0dp"
            tools:layout_conversion_absoluteWidth="395dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="46dp">

            <TextView
                android:id="@+id/textView_issue_tracker_title"
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:text="Title:"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:layout_conversion_absoluteHeight="19dp"
                tools:layout_conversion_absoluteWidth="236dp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp" />

            <TextView
                android:id="@+id/textView_issue_tracker_title_modified"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout_conversion_absoluteHeight="19dp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_conversion_absoluteHeight="0dp"
            tools:layout_conversion_absoluteWidth="395dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="46dp">

            <TextView
                android:id="@+id/textView_issue_tracker_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description:"
                android:textStyle="bold"
                tools:laout_conversion_absoluteWidth="236dp"
                tools:layout_conversion_absoluteHeightabsoluteX="8dp"
                tools:layout_editor_="19dp"
                tools:layyout_editor_absoluteY="27dp" />

            <TextView
                android:id="@+id/textView_issue_tracker_description_modified"
                android:layout_width="321dp"
                android:layout_height="wrap_content"
                tools:layout_conversion_absoluteHeight="19dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView_issue_tracker_assigned"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:text="Assigned:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_issue_tracker_assigned_modified"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView_issue_tracker_assigned_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assigned Date:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_issue_tracker_assigned_date_modified"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textView_issue_tracker_due_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Due Date:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_issue_tracker_due_date_modified"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textView_issue_tracker_issue_status_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status:"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_issue_tracker_issue_status_openedclosed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/textView_issue_tracker_issue_status_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>